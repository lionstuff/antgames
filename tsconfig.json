{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    // "paths": {
    //   "@v1/*": [ "./server/api/v1/*" ],
    // },
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "public",
    "resolveJsonModule": true,
    "sourceMap": false,
    "target": "ES2022"
  },
  "exclude": [
    "./**/*.js",
    "build",
    "coverage",
    "dist",
    "index.ts",
    "node_modules",
    "server.ts",
    "test",
    "tests"
    // "./client/*config.*",
    // "./server/*config.*",
  ],
  "include": [
    "./**/*.ts",
    "public/*.*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
