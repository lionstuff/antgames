{
  "include": [
    "./**/*"
  ],
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "esnext",
    "resolveJsonModule": true,
    // "paths": {
    //   "@v1/*": [ "./server/api/v1/*" ],
    // },
    "baseUrl": "."
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "exclude": [
    // "./client/*config.*",
    // "./server/*config.*",
    "./**/*.js",
    "build",
    "coverage",
    "node_modules",
    "test",
    "tests"
  ]
}
